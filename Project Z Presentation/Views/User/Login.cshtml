@model UserViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
    
    @if (ViewData["Message"] != null)
    {
        <div class="@ViewData["MessageClass"]" role="alert">
            @ViewData["Message"]
        </div>
    }
}

<h2>Login</h2>

<div class="login-form">
    <form asp-action="Login" asp-controller="User">
        <div class="form-group">
            <input asp-for="Email" type="text" class="form-control" placeholder="Email" required="required">
        </div>
        <div class="form-group">
            <input asp-for="Password" type="password"class="form-control" placeholder="Password" required="required">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn2 btn-primary btn-block">Log in</button>
        </div>
        <div>
            <a asp-controller="User" asp-action="Register">Create an Account</a>
        </div>
    </form>
</div>
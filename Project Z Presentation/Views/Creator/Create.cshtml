@using Project_Z_Presentation.Models
@using Project_Z_Logic
@model CharacterViewModel

@{
    ViewBag.Title = "Create Character";
    Layout = "_Layout";
    
    @if (ViewData["Message"] != null)
    {
        <div class="@ViewData["MessageClass"]" role="alert">
            @ViewData["Message"]
        </div>
    }
}



<h2>Create character</h2>
<form method="post" asp-action="Create" asp-controller="Creator">
    
    <label for="occupations">Occupations</label>
    <select class="form-control" id="occupationID" asp-for="Occupation.OccupationID">
        @foreach (OccupationViewModel viewModel in ViewBag.Occupation)
        {
            <option value="@viewModel.OccupationID">@viewModel.Name</option>
        }
    </select>

    <br><br/>

    <label for="postraits">Traits</label>
    <select class="form-control" id="traitID" style="color: green" asp-for="arraytraits">
        @foreach (TraitViewModel viewModel in ViewBag.Trait)
        {
            @if (viewModel.PosNeg == true)
            {
                <option value="@viewModel.TraitID">@viewModel.Name</option>
            }
        }

    </select>
    <br/><br/>
    <select class="form-control" id="traitID" style="color: red" asp-for="arraytraits">
        @foreach (TraitViewModel viewModel in ViewBag.Trait)
        {
            @if (viewModel.PosNeg == false)
            {
                <option value="@viewModel.TraitID">@viewModel.Name</option>
            }
        }
    </select>

    <br><br/>

    <div class="form-group">
        <input asp-for="Name" type="text" class="form-control" placeholder="Name" required="required">
    </div>
    
    <br><br/>
    <button type="submit" class="btn btn-primary submit">Create Character</button>
</form>
@model ReviewViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";

}

<h2>Create a Comment</h2>

<form method="post" asp-action="CreateComment" asp-controller="Browse" asp-route-characterID="@Model.CharacterID">
    <div class="form-group">
        <input asp-for="Comment" type="text" class="form-control" placeholder="Comment" required="required">
    </div>
    <div class="form-group">
        <input asp-for="Rating" type="number" class="form-control" min="1" max="5" required="required">
    </div>

    <br><br/>
        <button type="submit" class="btn btn-primary submit">Create comment</button>
</form>
